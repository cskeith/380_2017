<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    
    <context-param>
        <param-name>title</param-name>
        <param-value>Visitor Counter Site</param-value>
    </context-param>
    
    <servlet>
        <servlet-name>myServlet1</servlet-name>
        <servlet-class>edu.ouhk.comps380f.lab02.VisitCounterServlet1</servlet-class>
        <init-param>
            <param-name>title</param-name>
            <param-value>Page for myServlet1</param-value>
        </init-param>
    </servlet>
    <servlet>
        <servlet-name>myServlet2</servlet-name>
        <servlet-class>edu.ouhk.comps380f.lab02.VisitCounterServlet2</servlet-class>
        <init-param>
            <param-name>title</param-name>
            <param-value>Page for myServlet2</param-value>
        </init-param>        
    </servlet>
    <servlet-mapping>
        <servlet-name>myServlet1</servlet-name>
        <url-pattern>/visit1</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>myServlet2</servlet-name>
        <url-pattern>/visit2</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
